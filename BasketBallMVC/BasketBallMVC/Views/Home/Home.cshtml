@model BasketBallMVC.ViewModel.HomeViewModel
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12" id="contentMain">
    <div class="col-md-12" id="textWitaj">Witaj @Model.Name!</div>
    <img src="~/Content/Images/player-11.png" class="col-md-3 imgs" />
    <div class="col-md-6" id="inContentMain">


        <div class="col-md-12 col-xs-12 fonts_size_top">Twoja pozycja w rankingu: @Model.RankingPosition</div>
        <div class="col-md-4 col-xs-12 fonts_size_top">Atrybuty</div>
        <div class="col-md-8 col-xs-8 fonts_size_top" id="lastDevices">Ostatnio zakupione sprzęty: </div>
        <div class="col-md-4 col-xs-12">
            <span class="col-md-8 col-xs-6  fonts_size">Siła:</span>
            <span class="col-md-4 col-xs-6 fonts_size">@Model.Strengh</span>
            <span class="col-md-8 col-xs-6 fonts_size">Celność:</span>
            <span class="col-md-4 col-xs-6 fonts_size">@Model.Marksmanship</span>
            <span class="col-md-8 col-xs-6 fonts_size">Szybkość:</span>
            <span class="col-md-4 col-xs-6 fonts_size">@Model.Speed</span>
            <span class="col-md-8 col-xs-6 fonts_size">Obrona:</span>
            <span class="col-md-4 col-xs-6 fonts_size">@Model.Defence</span>
            <span class="col-md-8 col-xs-6 fonts_size">Wygrane:</span>
            <span class="col-md-4 col-xs-6 fonts_size">@Model.WinGames</span>
            <span class="col-md-8 col-xs-6 fonts_size">Przegrane:</span>
            <span class="col-md-4 col-xs-6 fonts_size">@Model.LoseGames</span>
            <span class="col-md-8 col-xs-6 fonts_size">Ilość Gier:</span>
            <span class="col-md-4 col-xs-6 fonts_size">@Model.GameCounter</span>
        </div>
        <div class="col-md-8 col-xs-12 fonts_size_top" id="lastDevicesSmall">Ostatnio zakupione sprzęty: </div>
        <div class="col-md-6 col-md-offset-1 col-xs-12">
            @if (Model.RecentlyPurchasedDevices != null)
            {
                foreach (var item in Model.RecentlyPurchasedDevices)
                {
                    <span class="col-md-12 col-xs-12 fonts_size">- @item.Name</span>
                }
            }
        </div>
        <div class="col-md-8 col-xs-12 fonts_size_top">Ostatnio wyszkolone umiejętności: </div>

        <div class="col-md-6 col-md-offset-1 col-xs-12">
            @if (Model.RecentlyTrainedExercises != null)
            {
                foreach (var item in Model.RecentlyTrainedExercises)
                {
                    if (item.isAtack)
                    {
                        <span class="col-md-12 col-xs-12 fonts_size">- @item.ExerciseCategory.Name lvl: @item.Level - Atak</span>
                    }
                    else
                    {
                        <span class="col-md-12 col-xs-12 fonts_size">- @item.ExerciseCategory.Name lvl: @item.Level - Obrona</span>
                    }
                }
            }
        </div>
    </div>
    <img src="~/Content/Images/player-22.png" class="col-md-3 imgs" />

</div>
