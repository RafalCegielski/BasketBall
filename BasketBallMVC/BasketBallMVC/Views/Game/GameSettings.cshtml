@model BasketBallMVC.ViewModel.GameSettingsViewModel
@{
    ViewBag.Title = "GameSettings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="col-md-12" id="contentMain">
    <div class="col-md-12" id="textWitaj">Wybierz ataki!</div>
    <img src="../Content/Images/player-11.png" class="col-md-3 imgs" />
    <div class="col-md-6" id="inContentMain">
        @if (Model.isThreeOrMoreExercises)
        {
            using (Html.BeginForm("GameSettings", "Game", FormMethod.Post))
            {
                <span class="col-xs-10 col-xs-offset-1 text-center firstSelect">1. Atak</span>
                <div class="col-xs-10 col-xs-offset-1">
                    @Html.DropDownList("Exercise1", (SelectList)ViewBag.Exercises, "Wybierz...", new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(x => x.Exercise1)
                </div>
                <span class="col-xs-10 col-xs-offset-1 text-center settingSelect">2. Atak</span>
                <div class="col-xs-10 col-xs-offset-1">
                    @Html.DropDownList("Exercise2", (SelectList)ViewBag.Exercises, "Wybierz...", new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(x => x.Exercise2)
                </div>
                <span class="col-xs-10 col-xs-offset-1 text-center settingSelect">3. Atak</span>
                <div class="col-xs-10 col-xs-offset-1 lastSelect">
                    @Html.DropDownList("Exercise3", (SelectList)ViewBag.Exercises, "Wybierz...", new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(x => x.Exercise3)
                </div>
                <button class="btn btn-success btn-lg center-block buttonSet">Zatwierdź</button>
            }
        }
        else
        {
            <span class="col-xs-10 col-xs-offset-1 text-center errorSettingMessage">Musisz wyszkolić więcej ataków aby przejść do wyboru.</span>
        }


    </div>
    <img src="../Content/Images/player-22.png" class="col-md-3 imgs" />

</div>

@section Styles {
    @Styles.Render("~/bundles/battleSettings")
}
@section ScriptBottom {
    @Scripts.Render("~/bundles/battleSettingsScripts")
}
